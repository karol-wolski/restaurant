{
  "name": "restaurant",
  "version": "1.0.0",
  "description": "This is restaurant website.",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss/style.scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "lint": "eslint src/js",
    "uglify": "npx mkdirp dist/js && uglifyjs src/js/script.js --compress --mangle --warn --output dist/js/script.js",
    "imagemin": "imagemin src/images dist/images -p",
    "build:html": "copyfiles -f ./src/index.html dist",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:html && npm run build:css && npm run build:js && npm run build:images",
    "serve": "browser-sync dist -w",
    "watch:html": "onchange \"src/index.html\" -- npm run build:html",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js/*.js\" -- npm run build:js",
    "watch:all": "parallelshell \"npm run serve\" \"npm run watch:html\" \"npm run watch:css\" \"npm run watch:js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karol-wolski/restaurant.git"
  },
  "keywords": [
    "restaurant",
    "website"
  ],
  "author": "Karol Wolski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/karol-wolski/restaurant/issues"
  },
  "homepage": "https://github.com/karol-wolski/restaurant#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "copyfiles": "^2.3.0",
    "eslint": "^7.2.0",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.1",
    "postcss-cli": "^7.1.1",
    "prettier": "2.0.5",
    "uglify-js": "^3.9.4"
  }
}